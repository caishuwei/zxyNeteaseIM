<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <include layout="@layout/nim_layout_toolbar"></include>
    <android.support.design.widget.TabLayout
        android:id="@+id/tl_file"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutMode="opticalBounds"
        app:tabIndicatorColor="#F96F49"
        app:tabIndicatorHeight="0dp"
        app:tabSelectedTextColor="#F96F49"
        app:tabTextAppearance="@style/tab_select"
        app:tabTextColor="#6D6C6C"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#f5f5f5" />

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_file"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>